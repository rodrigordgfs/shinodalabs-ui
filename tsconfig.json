{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "target": "ESNext",
        "module": "ESNext",
        "lib": [
            "dom",
            "esnext"
        ],
        "declaration": true,
        "declarationDir": "dist",
        "outDir": "dist",
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true
    },
    "include": [
        "src"
    ]
}